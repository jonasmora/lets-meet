html, body, .container, .view, .controller
  height: 100%
  padding: 0
  width: 100%

a.btn, a.btn i, button, button i
  margin-right: 4px

.hero-unit
  background: rgba(0, 0, 0, .5)
  -webkit-border-radius: 0
  -moz-border-radius: 0
  border-radius: 0
  margin: 0
  padding: 10px 0
  position: fixed
  top: 0
  width: 100%
  z-index: 1
  h1
    color: white
    font-size: 30px
    margin: 0
  .pull-left
    padding-left: 10px
  .pull-right
    padding-right: 10px

@media (max-width: 768px)
  .modal
    margin-left: -200px;
    width: 400px;

  .form-horizontal
    .control-label
      width: 120px
    .controls
      margin-left: 140px

  input, textarea, .uneditable-input
    width: 180px;

@media (max-width: 480px)
  .modal
    margin-left: -150px;
    width: 300px;

  .form-horizontal
    .control-label
      width: 100px
    .controls
      margin-left: 120px

  input, textarea, .uneditable-input
    width: 120px;