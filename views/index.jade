  script(src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=true", type="text/javascript")

  script(src='/socket.io/socket.io.js')
  script(src='/js/lib/angular/angular.min.js')
  script(src='/js/lib/angular-bootstrap/ui-bootstrap-tpls.min.js')
  script(src='/js/lib/angular-bootstrap/ui-bootstrap.min.js')
  script(src='/js/lib/angular-cookies/angular-cookies.min.js')
