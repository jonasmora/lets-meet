div(ng-controller="MapsEditCtrl")
  div(class="modal-header")
    button(type="button", class="close", data-dismiss="modal", aria-hidden="true") ×
    h3(ng-show="newMap") Create New Map
    h3(ng-hide="newMap") Edit Map: {{ title }}
  form(class="form-horizontal")
    div(class="modal-body")
      div(class="control-group")
        label(class="control-label") Title:
        div(class="controls")
          input(type="text", ng-model="title", ng-disabled="!newMap", placeholder="Title")
      div(class="control-group")
        label(class="control-label") Description:
        div(class="controls")
          input(type="text", ng-model="description", ng-disabled="!newMap", placeholder="Description")
    div(class="modal-footer")
      button(type="button", class="btn pull-left", data-dismiss="modal")
        i(class="icon-remove")
        | Cancel
      button(type="submit", class="btn btn-primary", ng-disabled="pwError || incomplete", data-dismiss="modal")
        i(class="icon-ok icon-white")
        | Save Changes